{
  "manifest_version": 3,
  "name": "jobfilter",
  "description": "A browser extension fetching jobs whose JD aligns with your skillset, filtering through ollama.",
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "action": {
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "src/pages/panel/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "src/pages/content/global.ts"
      ],
      "css": [
        "contentStyle.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": []
    }
  ]
}
